<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/logo" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="40dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/input_emailaccount_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_edit"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/youxiang" />

            <EditText
                android:id="@+id/input_emailaccount_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/please_sryxzh"
                android:paddingLeft="5dp"
                android:textColor="@color/color_white"
                android:textColorHint="@color/color_white"
                android:textCursorDrawable="@drawable/color_white_cursor" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/input_password_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/input_emailaccount_rl"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_edit"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/mima" />

            <EditText
                android:id="@+id/input_password_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/please_srmm"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:textColor="@color/color_white"
                android:textColorHint="@color/color_white"
                android:textCursorDrawable="@drawable/color_white_cursor" />
        </LinearLayout>

        <TextView
            android:id="@+id/forget_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/input_password_ll"
            android:layout_marginTop="10dp"
            android:text="@string/forget_mm"
            android:textColor="@color/color_white" />


        <Button
            android:id="@+id/login_bt"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_password_ll"
            android:layout_marginTop="40dp"
            android:background="@drawable/stroke_white_and_solid_white"
            android:text="@string/login"
            android:textColor="@color/blue"
            android:textSize="18sp" />

    </RelativeLayout>


</LinearLayout>
