<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".activity.buyer.inquiryprice.SelectInquiryPriceActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green_color">

        <RelativeLayout
            android:id="@+id/fanhui_rl"
            android:layout_width="45dp"
            android:layout_height="match_parent">
            <!--返回-->
            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/fanhui_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/inquiry"
                android:textColor="@color/color_white"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/supplier_bt"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:background="@drawable/stroke_gray_and_solid_white"
        android:text="@string/supplier"
        android:textColor="@color/green_color"
        android:textSize="18sp" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/new_supplier_bt"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/stroke_gray_and_solid_white"
        android:text="@string/new_supplier"
        android:textColor="@color/green_color"
        android:textSize="18sp" />
</LinearLayout>
